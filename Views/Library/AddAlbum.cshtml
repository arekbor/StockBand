@{
    ViewData["Title"] = PageTitle.PageTitle25;
    Layout = "_layout";
}
@model AddAlbumDto

<div class="row mt-5">
    <div class="d-flex justify-content-center">
        <div class="card formBox">
            <div class="card-header">
                <h5>Add album</h5>
            </div>
            <div class="card-body">
                <div class="row text-start">
                    <form method="post" asp-controller="library" asp-action="addalbum">
                        <div class="validation text-danger" asp-validation-summary="All"></div>
                        <div class="form-group mt-1">
                            <label asp-for="Title"></label>
                            <input asp-for="Title" type="text" class="form-control" placeholder="Name">
                        </div>
                        <div class="form-group mt-1">
                            <label asp-for="Description"></label>
                            <textarea id="textarea_ckeditor" asp-for="Description" class="form-control" placeholder="Description" style="resize: none;"></textarea>
                        </div>
                        <div class="form-group mt-3 text-center">
                            <button type="submit" class="btn btn-success">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
     <script>
        CKEDITOR.replace('textarea_ckeditor', {
            customConfig: '/ckeditor/custom/config.js'
        });
    </script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}