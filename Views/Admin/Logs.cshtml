@{
    ViewData["Title"] = "All Logs";
    Layout = "_Layout";
}
@model PaginetedList<UserLog>

<div class="row">
    <div class="col-sm-12 col-md-6 col-lg-3">
        <form method="get" asp-controller="admin" asp-action="logs" autocomplete="off">
            <div class="input-group mb-3">
                <input id="search" type="text" name="search" class="form-control" placeholder="search">
                <div class="input-group-prepend">
                    <button id="searchSubmit" class="btn btn-success" type="submit">Search</button>
                    <a asp-controller="admin" asp-action="logs" class="btn btn-warning" role="button">Clear</a>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="table-responsive scrollable">
    <table class="table text-nowrap">
        <thead>
            <tr>
                <th scope="col">Guid</th>
                <th scope="col">Username</th>
                <th scope="col">Date</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model is not null)
                {
                    foreach (var log in Model)
                    {
                        <tr>
                            <th class="text-warning" scope="row">@log.Guid</th>
                            <td style="color:@log.User.Color;">@log.User.Name</td>
                            <td class="text-warning">@log.CreatedDate</td>
                            <td class="text-info">@log.Action</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>

<partial name="_PaginationPartial"/>